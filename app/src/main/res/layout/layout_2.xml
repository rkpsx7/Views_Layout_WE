<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#2F2F2F"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvAnd03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello And 03"
        android:textColor="@color/white"
        android:layout_marginTop="49dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:id="@+id/tvWelcomeToLayouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To Layouts"
        android:textColor="@color/white"
        android:layout_marginTop="120dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <View
        android:id="@+id/blue_circle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_blue"
        android:layout_below="@id/tvWelcomeToLayouts"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Lloyd Dcosta"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:layout_marginLeft="20dp"
        android:textSize="22dp"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/id_icon"
        android:drawablePadding="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGE: 20"
        android:layout_below="@id/name"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:textSize="22dp"
        android:layout_centerVertical="true"
        />

    <Button
        android:id="@+id/BtnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FF00"
        android:layout_alignParentBottom="true"
        android:text="Next"
        />

    <View
        android:id="@+id/View3"
        android:layout_width="140dp"
        android:layout_height="12dp"
        android:layout_above="@id/BtnNext"
        android:layout_marginBottom="20dp"
        android:background="#C4C4C4"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp" />

    <View
        android:id="@+id/View2"
        android:layout_width="160dp"
        android:layout_height="24dp"
        android:layout_above="@id/View3"
        android:layout_marginBottom="20dp"
        android:background="#C4C4C4"
        android:layout_alignParentRight="true"
        android:layout_marginRight="29dp" />

    <View
        android:id="@+id/View1"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:layout_above="@id/View2"
        android:layout_marginBottom="20dp"
        android:background="#C4C4C4"
        android:layout_alignParentRight="true"
        android:layout_marginRight="9dp" />

</RelativeLayout>